    <!-- Guardian Themes - Default Ancestral -->
    <string-array name="guardian_dialogue_default_phase1">
        <item>Soy el protector eterno de esta tierra</item>
        <item>¿Crees tener el conocimiento para vencerme?</item>
    </string-array>
    <string-array name="guardian_dialogue_default_phase2">
        <item>Tu sabiduría es... preocupante</item>
        <item>No esperaba tal desafío</item>
    </string-array>
    <string-array name="guardian_dialogue_default_phase3">
        <item>¡Nunca me rendiré sin luchar!</item>
        <item>¡Mi último aliento de resistencia!</item>
    </string-array>

    <!-- Guardian Mexico-->
    <string-array name="guardian_dialogue_mexico_phase1">
        <item>¡Soy el protector eterno de estas tierras sagradas!</item>
        <item>¿Crees poder desafiar mi sabiduría milenaria?</item>
    </string-array>
    <string-array name="guardian_dialogue_mexico_phase2">
        <item>¡Imposible! ¿Cómo conoces estos secretos?</item>
        <item>Mi poder se debilita... pero no me rendiré</item>
    </string-array>
    <string-array name="guardian_dialogue_mexico_phase3">
        <item>¡JAMÁS PERMITIRÉ QUE DOMINES MÉXICO!</item>
        <item>¡Uso mi último aliento de furia ancestral!</item>
    </string-array>

    <!-- Guardian Japon-->
    <string-array name="guardian_dialogue_japan_phase1">
        <item>El honor de Japón fluye por mis venas</item>
        <item>Tu conocimiento será probado por mi katana</item>
    </string-array>
    <string-array name="guardian_dialogue_japan_phase2">
        <item>Tu sabiduría es... impresionante, forastero</item>
        <item>El bushido me enseña a luchar hasta el final</item>
    </string-array>
    <string-array name="guardian_dialogue_japan_phase3">
        <item>¡Por el honor de mis ancestros, resistiré!</item>
        <item>¡Mi último ataque de conocimiento!</item>
    </string-array>

    <!-- Guardian Egipto-->
    <string-array name="guardian_dialogue_egypt_phase1">
        <item>Los secretos del Nilo fluyen en mi esencia</item>
        <item>¿Osas desafiar la sabiduría de los faraones?</item>
    </string-array>
    <string-array name="guardian_dialogue_egypt_phase2">
        <item>¡Ra me abandona! Tu conocimiento es vasto</item>
        <item>Las pirámides tiemblan ante tu saber</item>
    </string-array>
    <string-array name="guardian_dialogue_egypt_phase3">
        <item>¡Por Anubis, nunca te rendiré mi reino!</item>
        <item>¡Invoco la maldición final del conocimiento!</item>
    </string-array>

    <!-- Guardian Francia-->
    <string-array name="guardian_dialogue_france_phase1">
        <item>La elegancia y el saber de Francia nunca serán tuyos</item>
        <item>¡Mon Dieu! ¿Quién osa desafiarme?</item>
    </string-array>
    <string-array name="guardian_dialogue_france_phase2">
        <item>¡C\'est impossible! Tu cultura me sorprende</item>
        <item>¡Mi orgullo galo está en peligro!</item>
    </string-array>
    <string-array name="guardian_dialogue_france_phase3">
        <item>¡Vive la France! ¡Nunca me rendiré!</item>
        <item>¡Mi último ataque de resistencia!</item>
    </string-array>

